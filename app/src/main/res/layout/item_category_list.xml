<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_item_selector_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_less"
        android:textColor="@color/add_shop_text"
        android:textSize="@dimen/text_smaller"
        tools:text="美食"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_less"
        android:background="@color/add_shop_split"/>
</LinearLayout>