<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_gray_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_padding_more"
        android:layout_marginTop="@dimen/common_padding_more"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_manager_add_shop_logo"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/common_padding_more"
            android:layout_marginRight="@dimen/common_padding_more"
            android:layout_marginTop="10dp"
            android:src="@drawable/shop_detail_add_pic" />

        <TextView
            android:id="@+id/tv_manager_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="点击添加商铺Logo"
            android:textColor="@color/verify_center_text_color"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding_more"
            android:src="@drawable/store_icon_1080p" />

        <ImageView
            android:id="@+id/iv_shop_name_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/et_shop_name"
            android:src="@drawable/icon_red_star" />

        <EditText
            android:id="@+id/et_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_shop"
            android:layout_alignTop="@id/iv_shop"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_shop"
            android:background="@null"
            android:hint="@string/activity_add_shop_name"
            android:inputType="text"
            android:textColor="@color/add_shop_text"
            android:textColorHint="@color/add_shop_text_hint_color"
            android:textSize="@dimen/text_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_less"
            android:layout_alignBottom="@id/iv_shop"
            android:layout_toRightOf="@id/iv_shop"
            android:background="@color/add_shop_split" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding_more"
            android:src="@drawable/shop_phone_icon_1080p" />

        <EditText
            android:id="@+id/et_shop_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_phone"
            android:layout_alignTop="@id/iv_phone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_phone"
            android:background="@null"
            android:hint="@string/activity_add_shop_phone"
            android:inputType="phone"
            android:maxLength="12"
            android:textColor="@color/add_shop_text"
            android:textColorHint="@color/add_shop_text_hint_color"
            android:textSize="@dimen/text_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_less"
            android:layout_alignBottom="@id/iv_phone"
            android:layout_toRightOf="@id/iv_phone"
            android:background="@color/add_shop_split" />
    </RelativeLayout>

    <!--联系人姓名-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding_more"
            android:src="@drawable/name_icon_1080p" />

        <EditText
            android:id="@+id/et_shop_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_person"
            android:layout_alignTop="@id/iv_person"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_person"
            android:background="@null"
            android:hint="@string/activity_add_shop_person"
            android:inputType="text"
            android:textColor="@color/add_shop_text"
            android:textColorHint="@color/add_shop_text_hint_color"
            android:textSize="@dimen/text_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_less"
            android:layout_alignBottom="@id/iv_person"
            android:layout_toRightOf="@id/iv_person"
            android:background="@color/add_shop_split" />
    </RelativeLayout>

    <!--地址-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding_more"
            android:src="@drawable/address_icon_1080p" />

        <ImageView
            android:id="@+id/iv_address_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/et_shop_address"
            android:src="@drawable/icon_red_star" />

        <EditText
            android:id="@+id/et_shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_address"
            android:layout_alignTop="@id/iv_address"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_address"
            android:background="@null"
            android:hint="地址定位中......"
            android:inputType="text"
            android:textColor="@color/add_shop_text"
            android:textColorHint="@color/add_shop_text_hint_color"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_use_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/common_padding_less"
            android:layout_marginRight="@dimen/common_padding_more"
            android:background="@drawable/text_bottom_bg"
            android:clickable="true"
            android:paddingBottom="3dp"
            android:text="@string/activity_add_shop_use_address"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_smaller" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_less"
            android:layout_alignTop="@+id/iv_category"
            android:layout_toRightOf="@+id/iv_category"
            android:background="@color/add_shop_split" />

        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_padding_more"
            android:src="@drawable/class_icon_1080p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_category"
            android:layout_alignTop="@id/iv_category"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_category"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/rl_shop_category_big"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/et_shop_category_big"
                    android:layout_width="@dimen/activity_update_shop_location_width"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/activity_add_shop_big_category"
                    android:textColor="@color/add_shop_text"
                    android:textSize="@dimen/text_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/et_shop_category_big"
                    android:padding="@dimen/activity_update_shop_drop_padding"
                    android:src="@drawable/push_blue_icon_1080p" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shop_category_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/et_shop_category_small"
                    android:layout_width="@dimen/activity_update_shop_location_width"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/activity_add_shop_small_category"
                    android:textColor="@color/add_shop_text"
                    android:textSize="@dimen/text_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/et_shop_category_small"
                    android:padding="@dimen/activity_update_shop_drop_padding"
                    android:src="@drawable/push_blue_icon_1080p" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/et_shop_category_invisible"
                    android:layout_width="@dimen/activity_update_shop_location_width"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/add_shop_text"
                    android:textColorHint="@color/add_shop_text_hint_color"
                    android:textSize="@dimen/text_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/et_shop_category_invisible"
                    android:padding="@dimen/activity_update_shop_drop_padding"
                    android:src="@drawable/push_blue_icon_1080p" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_less"
            android:layout_alignBottom="@id/iv_category"
            android:layout_toRightOf="@id/iv_category"
            android:background="@color/add_shop_split" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_shop_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_padding_more"
            android:layout_marginLeft="@dimen/common_button_margin_left_right"
            android:layout_marginRight="@dimen/common_button_margin_left_right"
            android:layout_marginTop="@dimen/common_padding_more"
            android:background="@drawable/button_now_register_shop_bg"
            android:paddingBottom="@dimen/common_button_padding_bot_top"
            android:paddingTop="@dimen/common_button_padding_bot_top"
            android:text="@string/activity_binding_wifi_next"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small" />
    </LinearLayout>
</LinearLayout>