<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_wifi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_more"
        android:src="@drawable/wifi_blue3_icon_1080p" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_manage_wifi"
        android:layout_toRightOf="@+id/iv_wifi_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_my_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/verify_center_text_color"
            android:textSize="@dimen/text_medium"
            tools:text="Hotel Free WiFi" />

        <TextView
            android:id="@+id/tv_my_wifi_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/verify_center_text_notice"
            android:textSize="@dimen/text_smaller"
            tools:text="Holo Wifi Free" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/btn_manage_wifi"
        android:textColor="@color/verify_center_text_color" />


    <TextView
        android:id="@+id/btn_manage_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_padding_more"
        android:background="@drawable/button_verify_center_manage"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="管理"
        android:textColor="@color/white"
        android:textSize="@dimen/text_smaller" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_less"
        android:layout_below="@id/iv_wifi_logo"
        android:layout_marginLeft="@dimen/common_padding_more"
        android:background="@color/binding_wifi_split" />
</RelativeLayout>