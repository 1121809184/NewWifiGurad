<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/theme_color"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/scan_wifi_button_bg"/>

        <ImageView
            android:id="@+id/iv_shape1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/scan_wifi_ripple_shape"/>

        <ImageView
            android:id="@+id/iv_shape2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/scan_wifi_ripple_shape"/>

        <ImageView
            android:id="@+id/iv_shape3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/scan_wifi_ripple_shape"/>

        <ImageView
            android:id="@+id/iv_wifi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="130dp"
            android:src="@drawable/wifi_circle"
            android:visibility="invisible"/>


        <ImageView
            android:id="@+id/iv_wifi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/wifi_circle"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_wifi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/wifi_circle"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_wifi4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="25dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/wifi_circle"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_small_shape1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <ImageView
            android:id="@+id/iv_small_shape2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <ImageView
            android:id="@+id/iv_small_shape3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <ImageView
            android:id="@+id/iv_small_shape4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <ImageView
            android:id="@+id/iv_small_shape5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <ImageView
            android:id="@+id/iv_small_shape6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <ImageView
            android:id="@+id/iv_small_shape7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <ImageView
            android:id="@+id/iv_small_shape8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <ImageView
            android:id="@+id/iv_small_shape9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <ImageView
            android:id="@+id/iv_small_shape10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/scan_wifi_small_point"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textColor="@color/theme_color"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_percent"
                android:layout_centerHorizontal="true"
                android:text="@string/activity_scan_wifi_searching"
                android:textColor="@color/theme_color"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_false_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/activity_scan_wifi_problem_wifi_m_b"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large"
            android:visibility="invisible"/>
    </FrameLayout>
</LinearLayout>