<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color">

        <ImageView
            android:id="@+id/iv_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/security_check_laoding_1080p"/>

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/security_check_btn_1080p"
            android:visibility="invisible"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_safe_check_bold_text_m_b"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="@string/activity_safe_check_checking"
                android:textColor="@color/white"/>
        </FrameLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/common_padding_less"
                    android:layout_marginLeft="@dimen/common_padding_more"
                    android:layout_marginTop="@dimen/common_padding_less"
                    android:text="@string/activity_safe_check_option_1"
                    android:textColor="@color/verify_center_text_color"
                    android:textSize="@dimen/text_small"/>

                <ImageView
                    android:id="@+id/iv_loding1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/common_padding_more"
                    android:layout_marginRight="@dimen/common_padding_more"
                    android:src="@drawable/loading"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_more"
                android:layout_marginLeft="@dimen/common_padding_more"
                android:layout_marginRight="@dimen/common_padding_more"
                android:background="@color/binding_wifi_split"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/common_padding_less"
                    android:layout_marginLeft="@dimen/common_padding_more"
                    android:layout_marginTop="@dimen/common_padding_less"
                    android:text="@string/activity_safe_check_option_2"
                    android:textColor="@color/verify_center_text_color"
                    android:textSize="@dimen/text_small"/>

                <ImageView
                    android:id="@+id/iv_loding2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/common_padding_more"
                    android:layout_marginRight="@dimen/common_padding_more"
                    android:src="@drawable/loading"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_more"
                android:layout_marginLeft="@dimen/common_padding_more"
                android:layout_marginRight="@dimen/common_padding_more"
                android:background="@color/binding_wifi_split"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/common_padding_less"
                    android:layout_marginLeft="@dimen/common_padding_more"
                    android:layout_marginTop="@dimen/common_padding_less"
                    android:text="@string/activity_safe_check_option_3"
                    android:textColor="@color/verify_center_text_color"
                    android:textSize="@dimen/text_small"/>

                <ImageView
                    android:id="@+id/iv_loding3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/common_padding_more"
                    android:layout_marginRight="@dimen/common_padding_more"
                    android:src="@drawable/loading"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_more"
                android:layout_marginLeft="@dimen/common_padding_more"
                android:layout_marginRight="@dimen/common_padding_more"
                android:background="@color/binding_wifi_split"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/common_padding_less"
                    android:layout_marginLeft="@dimen/common_padding_more"
                    android:layout_marginTop="@dimen/common_padding_less"
                    android:text="@string/activity_safe_check_option_4"
                    android:textColor="@color/verify_center_text_color"
                    android:textSize="@dimen/text_small"/>

                <ImageView
                    android:id="@+id/iv_loding4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/common_padding_more"
                    android:layout_marginRight="@dimen/common_padding_more"
                    android:src="@drawable/loading"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/split_more"
                android:layout_marginLeft="@dimen/common_padding_more"
                android:layout_marginRight="@dimen/common_padding_more"
                android:background="@color/binding_wifi_split"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/common_padding_less"
                    android:layout_marginLeft="@dimen/common_padding_more"
                    android:layout_marginTop="@dimen/common_padding_less"
                    android:text="@string/activity_safe_check_option_5"
                    android:textColor="@color/verify_center_text_color"
                    android:textSize="@dimen/text_small"/>

                <ImageView
                    android:id="@+id/iv_loding5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/common_padding_more"
                    android:layout_marginRight="@dimen/common_padding_more"
                    android:src="@drawable/loading"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>